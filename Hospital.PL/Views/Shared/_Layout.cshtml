<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital.PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital.PL.styles.css" asp-append-version="true" />
	
</head>
<body>
    
	<nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
            <a class="navbar-brand ps-3">ELASHRY</a>

			<button data-bs-toggle="offcanvas" type="button" data-bs-target="#link"
				aria-controls="sidenav" class="navbar-toggler d-none d-md-inline-block 
				form-inline me-auto ms-0 me-md-3 my-2 my-md-0 ">
				<span class="navbar-toggler-icon "></span>
			</button>
            <div class="d-none d-md-inline-block form-inline ms-auto ms-0 me-md-3 my-2 my-md-0">
				<!-- Sidebar Toggle -->
				<ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="fas fa-user"></i>
						</a>
						<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
						<li><a class="dropdown-item" asp-controller="Account" asp-action="SignUp">Sign Up</a></li>
						<li><a class="dropdown-item" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
						</ul>
					</li>
				</ul>
            </div>
    </nav>
	 <nav id="link" aria-labelledby="sidebarlabel" style="top:32px; width:200px;" tabindex="-1" class="offcanvas-body mt-4  offcanvas-start offcanvas bg-dark">
		<div class="offcanvas-body ">
			<ul class="navbar-nav">
				<li class="nav-item mb-3 ">
					<a class="nav-link text-light" asp-controller="Home" asp-action="Index">
						<i class="fas fa-home"></i>
						Home
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light "asp-controller="Patient" asp-action="Index">
						<i class="fas fa-hospital-user"></i>
						Patients
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label "asp-controller="Room" asp-action="Index">
						<i class="fas fa-bed"></i>
						Rooms
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label "asp-controller="Doctor" asp-action="Index">
						<i class="fas fa-user-md"></i>
						Doctors
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label " asp-controller="Department" asp-action="Index">
						<i class="fas fa-building"></i>
						Department
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label " asp-controller="Receptionist" asp-action="Index">
						<i class="fas fa-users"></i>
						Receptionist
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label " asp-controller="Nurse" asp-action="Index">
						<i class="fas fa-user-nurse"></i>
						Nurse
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label " asp-controller="TestReport" asp-action="Index">
						<i class="fas fa-stethoscope"></i>
						TestReport
					</a>
				</li>
				<li class="nav-item mb-3">
					<a class="nav-link text-light form-check-label " asp-controller="Bill" asp-action="Index">
						<i class="fas fa-receipt"></i>
						Bill
					</a>
				</li>
			</ul>

		</div>

	</nav> 
	
			<div class="container">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
