@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div>
    <form asp-action="SignIn" class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input class="text" asp-for="Email" placeholder="Email" required="">
        </div>

        <div class="form-group">
            <input class="text" asp-for="Password" placeholder="Password" required="">
        </div>
        <div class="form-group checkbox-group">
            <label class="ms-5">
                <input asp-for="RememberMe" class="checkbox" >
            </label>Remember Me

        </div>
        <input type="submit" value="SignIn" class="btn-outline-dark">
    </form>
    <p>Don't have an Account ? <a class="SignIn-link" asp-action="SignUp">SignUp Now</a></p>
</div>



@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

